{
  "functions": {
    "predeploy": ["pnpm -C firebase/functions run predeploy:functions"],
    "source": "firebase/functions",
    "runtime": "nodejs20",
    "environmentVariables": {
      "A8_COOLDOWN_DAYS": "7",
      "FUNCTIONS_REGION": "asia-northeast1"
    }
  },
  "hosting": {
    "public": "apps/web/out",
    "ignore": ["**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/trackClick",
        "function": "trackClick"
      }
    ]
  },
  "firestore": {
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },

  "emulators": {
    "auth": { "port": 9099 },
    "firestore": { "port": 8080 },
    "functions": { "port": 5001 },
    "ui": { "enabled": true, "port": 4000 }
  }
}
